{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "strict": true,
    "target": "es5",
    "sourceMap": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./external-types/"
    ],
    "lib": [
      "dom"
    ]
  },
  "include": [
    "./examples/**/*",
    "./external-types/**/*",
    "./src/**/*"
  ],
  "ts-node": {
    "files": true
  }
}
